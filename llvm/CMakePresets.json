{
  "version": 8,
  "configurePresets": [
    {
      "name": "Clang18-Debug",
      "displayName": "Clang 18.1.3 x86_64-pc-linux-gnu (Debug)",
      "description": "Using compilers: C = /usr/bin/clang, CXX = /usr/bin/clang++",
      "binaryDir": "${sourceDir}/../build/${presetName}",
      "generator": "Ninja",
      "environment": {
        "CC": "clang",
        "CXX": "clang++"
      },
      "cacheVariables": {
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/../build/install/${presetName}",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_BUILD_TYPE": "Debug",
        "LLVM_USE_LINKER": "mold",
        "LLVM_ENABLE_PROJECTS": "clang;clang-tools-extra;lld;lldb;polly",
        "LLVM_ENABLE_RUNTIMES": "compiler-rt;libcxx;libcxxabi;libunwind",
        "LLVM_INCLUDE_EXAMPLES": "ON",
        "LLVM_INCLUDE_TESTS": "ON",
        "LLVM_ENABLE_PLUGINS": "ON",
        "CLANG_PLUGIN_SUPPORT": "ON",
        "CLANG_BUILD_EXAMPLES": "ON",
        "LLVM_DISABLE_ABI_BREAKING_CHECKS_ENFORCING": "OFF"
